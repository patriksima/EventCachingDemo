@page "/WeeklyReport"
@using EventCachingDemo.Shared.Queries

<h3>Weekly Report</h3>

@if (_reports == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Year</th>
            <th>Week</th>
            <th>Agent</th>
            <th>MostSoldProduct</th>
            <th>TotalProducts</th>
            <th>TotalPrice</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var report in _reports)
        {
            <tr>
                <td>@report.Year</td>
                <td>@report.Week</td>
                <td>@report.Agent</td>
                <td>@report.MostSoldProduct</td>
                <td>@report.TotalProducts</td>
                <td class="text-end">@report.TotalPrice.ToString("C2")</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {

    protected override async Task OnInitializedAsync()
    {
        _reports = await HttpClient.SendAsync(new WeeklyReportQuery());
    }

    private IList<ReportDto>? _reports;
}