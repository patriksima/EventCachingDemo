@using EventCachingDemo.Client.Pages
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Event Caching Demo</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(SalesDepartments)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Sales Departments
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(SalesAgents)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Sales Agents
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(Products)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Products
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(SalesLogs)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Sales Logs
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(WeeklyReport)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Weekly Report
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@nameof(History)" Match="NavLinkMatch.Prefix">
                <span class="oi oi-list-rich" aria-hidden="true"></span> History
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _collapseNavMenu = true;

    private string? NavMenuCssClass => _collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        _collapseNavMenu = !_collapseNavMenu;
    }

}